<%= form_for @event do |f| %>


  <div class="form-group">
    <label>Event Name</label>
    <%= f.text_field :name, placeholder: "Event name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Description</label>
    <%= f.text_area :description, rows: 5, placeholder: "Say something about your event", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Location</label>
    <%= f.text_field :location, placeholder: "Location", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Capacity</label>
    <%= f.text_field :capacity, placeholder: "Capacity", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Start Time</label>
    <%= f.text_field :starts_at, placeholder: "Ex. 2017-03-19 18:00", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>End Time</label>
    <%= f.text_field :ends_at, placeholder: "Ex. 2017-03-19 23:00", class: "form-control" %>
  </div>

  <label>Other Event Details</label>

  <div class="form-group">
    <%= f.check_box :includes_food %> Will have food
  </div>
  <div class="form-group">
    <%= f.check_box :includes_drinks %> Will have drinks
  </div>

  <div class="form-group">
    <label>Price</label>
    <div class="input-group">
      <div class="input-group-addon">â‚¬</div>
      <%= f.number_field :price, placeholder: "eg. 20", class: "form-control" %>
    </div>
  </div>

  <label>Publish this event?</label>

  <div class="form-group">
    <%= f.check_box :active %> Active
  </div>

  <label>Categories</label>

<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
  <div class="form-group">
    <%= b.check_box(class: "check_box") %> <%= b.object.name %>
  </div>
<% end %>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
